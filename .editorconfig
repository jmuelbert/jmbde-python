#
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88  # Matches Black's default

# Python files
[*.{py,pyi}]
indent_size = 4
max_line_length = 88
indent_style = space

# Qt specific files
[*.{ui,qrc,qss}]
indent_size = 2
indent_style = space

# Qt Translation files
[*.ts]
indent_size = 2
indent_style = space

# Web related files
[*.{js,jsx,ts,tsx,css,scss,html,json}]
indent_size = 2
indent_style = space
max_line_length = 100

# Documentation files
[*.{md,rst,adoc}]
indent_size = unset
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space
max_line_length = off

# Configuration files
[{*.toml,pyproject.toml,poetry.lock}]
indent_size = 4
indent_style = space

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
indent_style = space
max_line_length = 100

# C++ related files
[*.{cpp,hpp,h,c}]
indent_size = 4
indent_style = space
max_line_length = 100

# Build system files
[{CMakeLists.txt,*.cmake}]
indent_size = 2
indent_style = space

# Database files
[*.sql]
indent_size = 2
indent_style = space

# Resource files
[*.rc]
indent_size = 4
indent_style = space
end_of_line = crlf  # Windows specific

# Make files
[Makefile]
indent_style = tab

# Git files
[.git*]
indent_style = tab
indent_size = 4

# Environment files
[*.env]
indent_size = 2
max_line_length = off

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Special files
[{package.json,package-lock.json}]
indent_size = 2

# Scripts
[{justfile,.justfile,*.just}]
indent_size = 4

# Configuration override files
[.{pylintrc,flake8}]
indent_size = 2

# Batch files (Windows)
[*.{cmd,bat}]
end_of_line = crlf
indent_style = space
indent_size = 2
