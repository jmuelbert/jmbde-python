{
  "default": true,
  "line-length": {
    "line_length": 255,
    "tables": false
  },
  "ul-indent": {
    "indent": 2
  },
  "list-marker-space": true,
  "no-inline-html": false,
  "first-line-h1": false,
  "MD013": false,
  "no-trailing-punctuation": {
    "punctuation": ".,;:!"
  },
  "ordered-list-marker-value": {
    "style": "ordered"
  },
  "fenced-code-language": true,
  "no-space-in-code": true,
  "blanks-around-headings": {
    "lines_above": 1,
    "lines_below": 1
  },
  "blanks-around-lists": true,
  "blanks-around-fences": true,
  "no-multiple-blanks": {
    "maximum": 2
  },
  "emphasis-style": {
    "style": "underscore"
  },
  "strong-style": {
    "style": "underscore"
  },
  "table-pipes": {
    "style": "consistent"
  },
  "no-missing-space-atx": true,
  "no-reversed-links": true,
  "no-empty-links": true,
  "files": {
    "ignore": [
      ".cache/",
      ".direnv/",
      ".flatpak/",
      ".flatpak/builder/",
      "build*/",
      "node_modules/",
      "repo/",
      ".github/linters/valestyles/Microsoft/",
      ".github/linters/valestyles/proselint/",
      "pnpm-lock.yaml",
      "package-lock.json"
    ]
  }
}
